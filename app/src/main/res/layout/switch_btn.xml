<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/rl_title_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_switch_left"
            android:layout_width="@dimen/btn1080_w_120_dp"
            android:layout_height="@dimen/btn1080_w_40_dp"
            android:layout_centerVertical="true"
            android:background="@drawable/switch_left_btn"
            android:text="@string/switch_cloud"
            android:textSize="@dimen/menu1080_tv_25_dp" />

        <Button
            android:id="@+id/btn_switch_right"
            android:layout_width="@dimen/btn1080_w_120_dp"
            android:layout_height="@dimen/btn1080_w_40_dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_switch_left"
            android:background="@drawable/switch_right_btn"
            android:text="@string/switch_local"
            android:textSize="@dimen/menu1080_tv_25_dp" />
    </RelativeLayout>

</LinearLayout>