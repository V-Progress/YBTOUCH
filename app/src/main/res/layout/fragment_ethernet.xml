<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ideafactory.client.business.menuInfo.fragment.EthernetFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_ethernet_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/btn_ethernet_hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="230dp"
            android:background="@drawable/common_btn_sel"
            android:padding="@dimen/mar_10_dp"
            android:textSize="@dimen/menu1080_tv_40_dp" />

        <TextView
            android:id="@+id/tv_ethernet_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_ethernet_hint2"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/menu1080_tv_40_dp" />


    </RelativeLayout>

</FrameLayout>
