<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/call_queue_style"
    android:orientation="horizontal"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/call_queue_layout_margin_view"
        android:layout_weight="0.8">

        <TextView
            android:id="@+id/tv_call_queue_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:ems="1"
            android:gravity="center"
            android:text="商店名称"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/call_queue_layout_margin_view"
        android:layout_marginTop="@dimen/call_queue_layout_margin_view"
        android:background="@color/red" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/call_queue_layout_margin_view"
        android:layout_weight="0.8">

        <TextView
            android:id="@+id/tv_call_queue_current"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:ems="1"
            android:gravity="center"
            android:text="@string/call_queue_message"
            android:textColor="@color/yellow"
            android:textSize="25sp" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/call_queue_layout_margin_view"
        android:layout_marginTop="@dimen/call_queue_layout_margin_view"
        android:background="@color/red" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxEms="1"
            android:text="@string/call_queue_status"
            android:textColor="@color/blue_btn"
            android:textSize="25sp" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/call_queue_layout_margin_view"
        android:layout_marginTop="@dimen/call_queue_layout_margin_view"
        android:background="@color/red" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/call_queue_recycle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="6.4" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/call_queue_layout_margin_view"
        android:layout_marginTop="@dimen/call_queue_layout_margin_view"
        android:background="@color/red" />

    <TextView
        android:id="@+id/call_queue_tv_adver"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="云标叫号系统"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>