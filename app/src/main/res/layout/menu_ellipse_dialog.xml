<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_menu_ellipse"
            android:layout_width="@dimen/erwei_code_400_dp"
            android:layout_height="@dimen/erwei_code_400_dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_menu_ellipse"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="微信扫描二维码续费"
            android:textSize="@dimen/menu1080_tv_30_dp" />

    </LinearLayout>


</RelativeLayout>