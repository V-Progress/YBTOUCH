<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#157EFB" />
            <!-- 设置按钮的四个角为弧形  android:radius 弧形的半径 -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="10dp" android:topLeftRadius="0dp" android:topRightRadius="10dp" />
            <!-- 描边，边框宽度、颜色 -->
            <stroke android:width="2dp" android:color="#157EFB" />
        </shape>
    </item>
</selector>